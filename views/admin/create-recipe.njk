{% extends "layout-admin.njk" %}

{% block content %}

    <section class="card">
        <form method="POST" action="/admin/recipes">
            <div class="card__title">
                <h1>Criando receita</h1>

                <div class="card__button">
                    <button type="submit" class="btn-common">Salvar Receita</button>
                </div>
            </div>

            <div class="card__input-txt">
                <div>Imagem da receita</div>
                <div>
                    <input type="text" name="img_receipe" id="img_recipe" value="{{ recipe.image }}">
                </div>
            </div>

            <div id="ingredients" class="card__input-txt">
                <div>Ingredientes</div>
                <div class="ingredient">
                    <input type="text" name="ingredients[]" value="{{ recipe.ingredients }}"/>
                </div>
            </div>
            <button type="button" class="add_item add_ingredients">Adicionar novo ingrediente</button>

            <div id="steps" class="card__input-txt">
                <div>Modo de preparo</div>
                <div class="step">
                    <input type="text" name="preparation[]" value="{{ recipe.preparation }}">
                </div>
            </div>
            <button type="button" class="add_item add_steps">Adicionar novo passo</button>

            <div class="card__input-txt">
                <div>Informações adicionais</div>
                <div>
                    <textarea name="information" cols="30" rows="10" value="{{ recipe.information }}"></textarea>
                </div>
            </div>
        </form>
    </section>

    <script src="/scripts.js"></script>

{% endblock %}