{% extends "layout-admin.njk" %}

{% block content %}

    <div class="card">
        <div class="card__title">
            <h1>Receita:
                {{ recipe.title }}</h1>
            <div >
                <a href="/admin/recipes/{{recipe.id}}/edit" class="button">Editar receita</a>
            </div>
        </div>

        <div class="card__recipe-image">
            <img src="{{ recipe.image }}" alt="image-recipe">
        </div>

        <div class="card__recipe-info">
            <p>{{ recipe.title }}</p>
            <p>{{ recipe.author }}</p>
        </div>

        <div class="card__recipe-content">
            <h2>Ingredientes</h2>

            {% for ingredient in recipe.ingredients %}
                <p>{{ ingredient }}</p>
            {% endfor %}

            <h2>Modo Preparo</h2>
            {% for prep in recipe.preparation %}
                <p>{{ prep }}</p>
            {% endfor %}

            <h2>Informações adicionais</h2>
            <p>
                {{ recipe.information }}
            </p>
        </div>

        <section></section>
    </div>

{% endblock %}