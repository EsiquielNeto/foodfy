{% extends "layout-admin.njk" %}

{% block head %}
    <title>Listagem</title>

{% endblock %}

{% block content %}

    <div class="card">
        <h2>Gerenciar Recitas:</h2>

        {% for recipe in recipes %}
            <div class="card__recipes">
                
                <div class="card__recipes-item">
                <img src="{{ recipe.image }}" alt="">

                <div class="card__recipes-info">
                    <div>
                        {{ recipe.title }}
                    </div>

                    <div>
                        {{ recipe.author }}
                    </div>

                    <div>
                        Visualisar
                    </div>

                </div>
            </div>
            </div>
            
        {% endfor %}
    </div>

    <div></div>

{% endblock %}